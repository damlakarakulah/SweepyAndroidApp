<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:fontFamily">@font/rubik</item>

    </style>


    <style name="FirebaseTheme" parent="Theme.Design.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/light_gray</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@drawable/clouds2</item>
        <item name="android:tileMode">disabled</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink</item>
        <item name="colorAccent">@color/light_gray</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/clouds2_copy</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.Design.NoActionBar">
        <item name="android:windowBackground">@drawable/sweepy3</item>
    </style>


    <style name="FirebaseUI.AuthMethodPicker.Logo">
        <item name="android:padding">30dp</item>
    </style>

    <style name="FirebaseUI.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FirebaseUI.Text.Link">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="FirebaseUI.Button" parent="AppTheme.Button">
        <item name="android:background">@color/pink</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:radius">2dp</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ProgressBar" parent="customizedDialogStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:visibility">visible</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:indeterminateDrawable">@drawable/circular_progress_dialog</item>
    </style>

    <style name="customizedDialogStyle" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/border</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- SplashScreen theme. -->


    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/pink</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/pink</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>


</resources>
